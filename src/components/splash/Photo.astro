---
import { Image } from "astro:assets";
// import badge from "@assets/splash/badge.png";

const { src, idx, caption="Sample text", left=true} = Astro.props;
---
<div class={`flex flex-col h-min lg:mx-0 mx-4 p-2 lg:p-4 bg-white z-50 rounded-sm ${idx % 2 ? (left ? 'rotate-1 lg:rotate-3' : 'rotate-1 lg:rotate-3') : '-rotate-1 lg:-rotate-3'}` }
style={`filter: drop-shadow(0 5px 5px #000);`}>
    <Image
        alt="Image"
        id="page1"
        format="avif"
        src={src}
        width={400}
        class="w-full lg:max-w-144 max-h-144 w-auto h-auto "
    />
    <!-- <div class="py-4 text-4xl font-semibold text-center flex justify-center items-center" style="font-family: 'Single Day'">
        {caption}
    </div> -->
</div>

<style define:vars={{idx}}>
#page1 {
    filter: grayscale(100%);

    animation-duration: 5.0s;
    animation-delay: 2.0s;
    animation-name: colored;
    animation-timing-function: ease-in-out;
    animation-fill-mode: forwards;
}

@keyframes colored {
    0% {
        filter: grayscale(100%);
    }
    100% {
        filter: grayscale(0%);
    }
  }

</style>