---
import { Image, getImage } from "astro:assets";

const { src, name, start } = Astro.props;
---

<tr>
  <th
    class="whitespace-nowrap bg-black text-base sm:text-lg md:text-xl lg:text-3xl p-2 lg:p-4 text-white"
    >{start}</th
  >
  <td class="border-2 border-black">
    <Image
      src={src}
      format="avif"
      width={200}
      alt="Musicians"
      class="z-50 h-16 w-16 lg:w-24 min-w-16 lg:min-w-24 lg:h-24 w-auto rounded-sm aspect-square"
      id="jacket"
    />
  </td>
  <td
    class="uppercase font-bold text-base sm:text-lg md:text-xl lg:text-3xl bg-white p-2 lg:p-4 border-2 border-black"
    >{name}</td
  >
</tr>
