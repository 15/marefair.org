            <Image
              alt={`Photo #${jdx}`}
              src={img}
              height={300}
              format="avif"
              style="filter: drop-shadow(0 2px 2px #000);"
              class="h-24 sm:h-32 xl:h-48 w-auto md:w-auto bg-white cursor-pointer rounded-lg sm:rounded-lg magic hover:scale-[1.1] "
