  href="/css/lightgallery-bundle.min.css"
/>
<Layout title="Mare Fair 2024 | Scrapbook">
  <section
    id="scrapbook"
    class="overflow-x-hidden w-full mx-auto background-texture flex flex-col items-center justify-center cursor-default h-full"
  >
    <Back />
    <div
      id="lightgallery"
      class="text-center mt-8 mb-8 sm:mt-8 sm:mb-12 block gap-y-8 w-full px-4 sm:px-8 sm:mx-auto"
    >
      {
        images.map(({ img, artist, description }, idx) =>
          idx === 0 ? (
            <div
              class="max-w-64 sm:max-w-96 mx-auto"
              data-src={img.src}
              data-sub-html={`<h4>Artist: ${artist}</h4>${description}`}
            >
              <a
                class={`relative z-50 inline-block m-2 sm:m-2 xl:m-4 duration-500 ${
                  idx % 2
                    ? "rotate-3 hover:rotate-6"
                    : "-rotate-3 hover:-rotate-6"
                }`}
              >
                <Image
                  alt="Scrapbook"
                  src={img}
                  height={600}
                  style="filter: drop-shadow(0 2px 2px #000); animation: idle 8s var(--sine) 0s infinite forwards;"
                  transition:name="postcard-scrapbook"
                  format="avif"
                  class="h-64 sm:h-80 md:h-104 xl:h-120 w-auto md:w-auto bg-white cursor-pointer rounded-lg magic hover:scale-[1.1] "
                />
              </a>
              <br />
            </div>
          ) : (
            <a
              class={`inline-block m-2 sm:m-2 xl:m-4 duration-500 ${
                idx % 2
                  ? "rotate-3 hover:rotate-6"
                  : "-rotate-3 hover:-rotate-6"
              }`}
              data-src={img.src}
              data-sub-html={`<h4>Artist: ${artist}</h4>${description}`}
            >
              <Image
                alt={`Art asset #${idx + 1}`}
                src={img}
                height={300}
                style="filter: drop-shadow(0 2px 2px #000);"
                format="avif"
                class="h-24 sm:h-32 xl:h-48 w-auto md:w-auto glass cursor-pointer rounded-lg sm:rounded-lg magic hover:scale-[1.1] "
              />
            </a>
          )
        )
      }
      {
        photos.map(({ img, photographer }, jdx) => (
          <a
            class={`inline-block m-2 sm:m-2 xl:m-4 duration-500 ${
              jdx % 2 ? "rotate-3 hover:rotate-6" : "-rotate-3 hover:-rotate-6"
            }`}
            data-src={img.src}
            data-sub-html={`<h4>Photographer: ${photographer}</h4>Mare Fair 2023 photo #${
