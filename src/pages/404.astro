---
import Layout from "@layouts/Layout.astro";
import { Image } from "astro:assets";
import img1 from "@assets/404/404-1.png";
import img2 from "@assets/404/404-2.png";
import img3 from "@assets/404/404-3.png";
import Footer from "@components/Footer.astro";
import Back from "@components/Back.astro";
---

<Layout title="Mare Fair 2024 | 404 Not Found">
  <section class="w-full mx-auto background-texture cursor-default  flex flex-col items-center justify-center h-[calc(100vh-6rem)] md:h-[calc(100vh-3rem)]">
    <Back />
    <div
      class="px-4 md:px-0 flex flex-col items-center justify-center w-full"
    >
      <Image
        src={img2}
        height="600"
        style="filter: drop-shadow(0 5px 5px #000);"
        alt="Fair Flyer"
        class="bg-white rounded-lg w-160 -rotate-3"
      />
    </div>
  </section>
  <Footer />
</Layout>
